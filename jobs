#!groovy
import groovy.io.FileType
import hudson.FilePath
import hudson.*

def folderName = 'folder_test_a'
    
job("${folderName}/test") {
    logRotator(-1, 10)

    triggers {
        // githubPush()
        scm('H/2 * * * *')
    }
    steps{
        shell "echo step1...."
            shell(readFileFromWorkspace('test2.groovy'))
    }

}
job("${folderName}/build") {
    logRotator(-1, 10)

    triggers {
        // githubPush()
        scm('H/2 * * * *')
    }
    steps{
        shell "echo 'buils code'"
    }

}
job("${folderName}/deploy") {
    logRotator(-1, 10)

    triggers {
        // githubPush()
        scm('H/2 * * * *')
    }
    steps{
        shell(readFileFromWorkspace('deploy2'))
    }

}
