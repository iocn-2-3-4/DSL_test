pipeline {
    agent any
    publishers {
        joinTrigger {
            projects('create_jobs')
        }
    }

    stages {
        stage('Build') {
            steps {
                build job: 'build'
            }
        }
        stage('Test') {
            steps {
                build job: 'test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
