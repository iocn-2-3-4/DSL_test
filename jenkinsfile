pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                build('example')
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                pylint /var/lib/jenkins/workspace/pipeline/views.py
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
